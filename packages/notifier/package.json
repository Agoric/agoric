{
  "name": "@agoric/notifier",
  "version": "0.6.2",
  "description": "Notifier allows services to update clients about state changes using a stream of promises",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "build": "exit 0",
    "prepack": "echo \"export {}; \" | cat - src/types-ambient.js > src/types.js && tsc --build --clean tsconfig.build.json",
    "postpack": "git clean -f '*.d.ts*' src/types.js",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "run-s --continue-on-error 'lint:*'",
    "lint:eslint": "eslint .",
    "lint:types": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "keywords": [
    "notifier"
  ],
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "dependencies": {
    "@agoric/assert": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/vat-data": "workspace:*",
    "@endo/far": "^1.0.1",
    "@endo/marshal": "^1.0.1",
    "@endo/patterns": "^1.0.1",
    "@endo/promise-kit": "^1.0.1"
  },
  "devDependencies": {
    "@agoric/kmarshal": "workspace:*",
    "@agoric/swing-store": "workspace:*",
    "@agoric/swingset-liveslots": "workspace:*",
    "@agoric/swingset-vat": "workspace:*",
    "@endo/init": "^1.0.1",
    "@endo/ses-ava": "^1.0.1",
    "ava": "^5.3.0",
    "c8": "^7.13.0"
  },
  "exports": {
    ".": "./src/index.js",
    "./exported.js": "./exported.js",
    "./subscribe.js": "./subscribe.js",
    "./tools/testSupports.js": "./tools/testSupports.js"
  },
  "files": [
    "src/",
    "tools/",
    "*.js",
    "NEWS.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "2m"
  },
  "typeCoverage": {
    "atLeast": 89.74
  }
}
