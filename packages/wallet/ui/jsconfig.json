{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.js",
    "scripts/**/*.js",
    "src/**/*.js",
    "src/**/*.jsx",
    "test/**/*.js",
    "tools/**/*.js"
  ]
}
