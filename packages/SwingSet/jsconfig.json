// This file can contain .js-specific Typescript compiler config.
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "checkJs": true,
    "noEmit": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
  },
  "include": [
    "exported.js",
    "lib/**/*.js",
    "src/**/*.js",
    "src/**/*.ts",
  ],
}
