    "c8": "^9.1.0",
    "ts-blank-space": "^0.4.1",
    "mock-fs": "^5.4.1",
    "@types/mock-fs": "4.13.4"
  },
  "dependencies": {
    "@agoric/ertp": "^0.16.2",
    "@agoric/internal": "^0.3.2",
    "@agoric/orchestration": "^0.1.0",
