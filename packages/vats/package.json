  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=11.0"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "20m"
