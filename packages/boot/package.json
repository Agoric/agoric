{
  "name": "@agoric/boot",
  "version": "0.1.0",
  "private": true,
  "description": "Config and utilities to bootstrap an Agoric chain",
  "type": "module",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "scripts": {
    "build": "exit 0",
    "test": "ava",
    "test:xs": "SWINGSET_WORKER_TYPE=xs-worker ava 'test/bootstrapTests/**/test-*.js' 'test/upgrading/**/test-*.js'",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "run-s --continue-on-error lint:*",
    "lint:types": "tsc",
    "lint:eslint": "eslint ."
  },
  "keywords": [],
  "author": "Agoric",
  "license": "Apache-2.0",
  "dependencies": {
    "@agoric/assert": "workspace:*",
    "@agoric/builders": "workspace:*",
    "@agoric/cosmic-swingset": "workspace:*",
    "@agoric/ertp": "workspace:*",
    "@agoric/inter-protocol": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/kmarshal": "workspace:*",
    "@agoric/swing-store": "workspace:*",
    "@agoric/swingset-vat": "workspace:*",
    "@agoric/telemetry": "workspace:*",
    "@agoric/time": "workspace:*",
    "@agoric/vat-data": "workspace:*",
    "@agoric/vats": "workspace:*",
    "@agoric/vm-config": "workspace:*",
    "@agoric/zoe": "workspace:*",
    "@endo/bundle-source": "^3.0.1",
    "@endo/captp": "^4.0.1",
    "@endo/eventual-send": "^1.0.1",
    "@endo/far": "^1.0.1",
    "@endo/init": "^1.0.1",
    "@endo/marshal": "^1.0.1",
    "@endo/promise-kit": "^1.0.1",
    "@endo/stream": "^1.0.1",
    "import-meta-resolve": "^2.2.1"
  },
  "devDependencies": {
    "@agoric/deploy-script-support": "workspace:*",
    "@agoric/governance": "workspace:*",
    "@agoric/store": "workspace:*",
    "@agoric/swingset-liveslots": "workspace:*",
    "ava": "^5.3.0",
    "c8": "^7.13.0",
    "tsx": "^3.12.8"
  },
  "files": [
    "CHANGELOG.md",
    "src/",
    "scripts/",
    "tools/",
    "*.json",
    "globals.d.ts",
    "exported.js"
  ],
  "engines": {
    "node": ">=14.15.0"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "files": [
      "test/**/test-*.js",
      "test/**/test-*.ts"
    ],
    "nodeArguments": [
      "--loader=tsx",
      "--no-warnings"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 85.68
  }
}
