{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": false,
  "command": {
    "version": {
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "preid": "dev",
      "changelogPreset": "conventionalcommits",
      "includeMergedTags": true
    }
  },
  "packages": [
    "golang/cosmos",
    "packages/*",
    "packages/wallet/*"
  ],
  "rejectCycles": true,
  "version": "independent"
}
